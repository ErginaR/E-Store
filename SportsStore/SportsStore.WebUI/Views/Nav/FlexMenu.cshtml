@model IEnumerable<string>
@{ 
    bool value=(bool)(ViewContext.RouteData.Values["horizontalLayout"]?? false);
    string wrapperClass = value ? "btn-group btn-group-justified btn-group-sm" : null;
}
<div class="@wrapperClass">
    @Html.ActionLink("Home", "List", "Product",null, new { @class = "btn btn-default "+(value?"btn-sm":"btn-lg btn-block") + (ViewBag.SelectedCategory == null ? " btn-primary " : "") })

    @foreach (var c in Model)
    {
        @Html.RouteLink(c, new { controller = "Product", action = "List", category = c, page = 1 }, new { @class = "btn btn-default " +(value?"btn-sm": "btn-lg btn-block") + (ViewBag.SelectedCategory == c ? " btn-primary" : "") })
   }

</div>
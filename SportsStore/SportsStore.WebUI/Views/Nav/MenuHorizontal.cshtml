@model IEnumerable<string>
<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "btn btn-default btn-sm" + (ViewBag.SelectedCategory == null ? " btn-primary " : "") })

    @foreach (var c in Model)
    {
        @Html.RouteLink(c, new { controller = "Product", action = "List", category = c, page = 1 }, new { @class = "btn btn-default btn-sm" + (ViewBag.SelectedCategory == c ? " btn-primary" : "") })
    }
</div>